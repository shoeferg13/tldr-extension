{
  "manifest_version": 2,
  "name": "TLDR",
  "description": "Summarizes text in an easy to read format.",
  "version": "0.2",
  "background": {
      "scripts": ["event.js", "dist/deepai.min.js", "background.js"],
      "persistent": false
  },
  "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "permissions": [
      "tabs", 
      "http://*/*", 
      "https://*/*",
      "identity"
  ]
 
}